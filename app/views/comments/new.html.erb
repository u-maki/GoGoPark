<h1>コメントを投稿</h1>
<%= form_with model: @comment, url: create_comment_path(place_id: params[:place_id]), local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, "コメント内容" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <!-- 施設情報 -->
  <div class="form-group">
    <h3>施設情報</h3>
    <div class="checkbox-group">
  <% Facility::FACILITY_ATTRIBUTES.each do |attribute| %>
    <label>
      <%= form.check_box attribute %>
      <%= Facility.human_attribute_name(attribute) %>
    </label><br>
  <% end %>
   </div>
  </div>

  <!-- 写真アップロード -->
  <div class="form-group">
    <%= form.label :photos, "写真をアップロード" %>
    <%= form.file_field :photos, multiple: true, class: "file-input" %>
  </div>

  <div class="form-group">
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %>
