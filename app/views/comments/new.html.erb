<%= stylesheet_link_tag 'comments', media: 'all' %>
<h1>コメントを投稿</h1>
<%= form_with model: @comment, url: comments_path(place_id: params[:place_id]), local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, "コメント内容" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <!-- 施設情報 -->
  <div class="form-group">
    <h3>施設情報</h3>
  <div class="checkbox-group">
    <% [
      [:toilet, "トイレ"],
      [:diaper_changing_station, "オムツ台"],
      [:vending_machine, "自販機"],
      [:shop, "売店"],
      [:parking, "駐車場"],
      [:slide, "滑り台"],
      [:swing, "ブランコ"]
    ].each do |attribute, label| %>
      <label>
        <%= form.check_box attribute %>
        <%= label %>
      </label><br>
    <% end %>
   </div>
  </div>

  <!-- 写真アップロード -->
  <div class="form-group">
    <%= form.label :photos, "写真をアップロード（最大5枚）" %>
    <%= form.file_field :photos, multiple: true, class: "file-input" %>
    <%= form.file_field :photos, multiple: true, class: "file-input" %>
    <%= form.file_field :photos, multiple: true, class: "file-input" %>
    <%= form.file_field :photos, multiple: true, class: "file-input" %>
    <%= form.file_field :photos, multiple: true, class: "file-input" %>
    
  </div>

  <div class="form-group">
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  </div>
  <!-- 「戻る」ボタン -->
  <%= link_to '戻る', request.referer || root_path, class: 'btn btn-secondary' %>

<% end %>
